<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="version_code_tree_view" model="ir.ui.view">
        <field name="name">version.code.tree.view</field>
        <field name="model">saas.version.code</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="is_enterprise"/>
            </tree>
        </field>
    </record>

    <record id="version_code_form_view" model="ir.ui.view">
        <field name="name">version.code.form.view</field>
        <field name="model">saas.version.code</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group>
                            <field name="code" required="1" />
                            <field name="is_enterprise" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="version_code_action_view" model="ir.actions.act_window">
        <field name="name">Odoo Version Code</field>
        <field name="res_model">saas.version.code</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="version_code_tree_view" />
    </record>
    

</odoo>
