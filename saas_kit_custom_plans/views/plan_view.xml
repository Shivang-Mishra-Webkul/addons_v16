<odoo>
    <data>
        <record id="plan_form_inherit_view" model="ir.ui.view">
            <field name="name">Plan Inherit</field>
            <field name="model">saas.plan</field>
            <field name="inherit_id" ref="odoo_saas_kit.saas_plan_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='server_id']" position="after">
                    <label for="provide_odoo_version"/>
                    <div>
                        <field name="provide_odoo_version" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <!-- , 'invisible': [('state', '!=', 'draft'), ('provide_odoo_version','=', False)] -->
                    </div>
                    <label for="plan_odoo_version" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('provide_odoo_version','=', False)]}"/>
                    <div attrs="{'readonly':[('state','!=','draft')], 'invisible': [('provide_odoo_version','=', False)]}">
                        <field name="plan_odoo_version" class="oe_inline" attrs="{'required': [('provide_odoo_version', '=', True)], 'readonly':[('state','!=','draft')]}"/>
                    </div>
                    <field name="odoo_version_code" attrs="{'invisible': False}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
