<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Saas Plans Sinippets -->
        <template id="saas_plans_data" name="Saas Plans">
            <section id="saas_plans" class="saas_plans pt24 pb24">
                <div class="container-fluid text-center">
                    <div class="btn-group mt-2" role="group" aria-label="Saal Plans Buttons">

                        <input type="radio" class="btn-check" name="btnradio" id="community_btn" autocomplete="off" checked="checked" />
                        <label class="btn btn-outline-primary" for="community_btn">Community</label>

                        <input type="radio" class="btn-check" name="btnradio" id="enterprise_btn" autocomplete="off" />
                        <label class="btn btn-outline-primary" for="enterprise_btn">Enterprise</label>
                        <!-- <button type="button" class="btn btn-primary" id="community_btn">Community</button>
                        <button type="button" class="btn btn-primary" id="enterprise_btn">Enterprise</button> -->
                    </div>
                </div>
                <div style="display:flex; align-items:center;">
                    <div class="container saas_plans_container">
                    </div>
                </div>
            </section>
        </template>
    
    
    
    
        <template id="saas_pricing_plans" name="Our Saas Plans">
            <section class="pt32 pb32">
                <div id="community_plans">
                    <t t-foreach="saas_odoo_version.filtered(lambda x: x.is_enterprise == False)" t-as="version">
                        <t t-set="com_plans" t-value="plans.filtered(lambda x: x.odoo_version_code == version.code)"/>
                        <t t-if="com_plans">
                            <div class="d-flex ms-3 version_label">
                                <span style="font-family: 'Source Sans Pro', sans-serif; font-size: 14px; color: #FFFFFF; letter-spacing: 0; align-items: center; justify-content: center; margin-left:14px;"><t t-out="version.name"/></span>
                                <div class="left_arrow"  style="width:57px"></div>
                            </div>
                            <div style="display:flex; align-items:center;">
                                <div class="owl-carousel owl-theme mt16">
                                    <t t-foreach="plans.filtered(lambda x: x.odoo_version_code == version.code)" t-as="plan">
                                        <div class="card item plan_card" style="background: radial-gradient(circle at top, #f5f1ef, #b3c2c7);" >
                                            <div>
                                                <h5 class="card-title text-center text-uppercase pt-4 pb-2"><t t-out="plan.name"/></h5>
                                                <p class="my-3 mx-3" style="text-align:justify;">
                                                    <t t-out="plan.summary"/>
                                                </p>
                                                <t t-if="plan.product_template_ids">
                                                    <a class="plan_button" t-att-href="plan.product_template_ids[0].website_url">
                                                    <button type="button" class="btn d-flex text-center mb32 mx-auto text-dark" style="background:#48d760;">Buy Now</button></a>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <p class="text-center">No community plans found.</p>
                        </t>
                    </t>
                </div>

                <div id="enterprise_plans" style="display:none;">

                    <t t-foreach="saas_odoo_version.filtered(lambda x: x.is_enterprise == True)" t-as="version">
                        <t t-set="ent_plans" t-value="plans.filtered(lambda x: x.odoo_version_code == version.code)"/>
                        <t t-if="ent_plans">
                            <div class="d-flex ms-3 version_label">
                                <span style="font-family: 'Source Sans Pro', sans-serif; font-size: 14px; color: #FFFFFF; letter-spacing: 0; align-items: center; justify-content: center; margin-left:5px;"><t t-out="version.name"/></span>
                                <div class="left_arrow"  style="width:46px;margin-left:0px;"></div>
                            </div>
                            <div style="display:flex; align-items:center;">
                                <div class="owl-carousel owl-theme mt16">
                                    <t t-foreach="plans.filtered(lambda x: x.odoo_version_code == version.code)" t-as="plan">
                                        <div class="card item plan_card" style="background: radial-gradient(circle at top, #f5f1ef, #b3c2c7);" >
                                            <div>
                                                <h5 class="card-title text-center text-uppercase pt-4 pb-2"><t t-out="plan.name"/></h5>
                                                <p class="my-3 mx-3 fw-bold" style="text-align:justify;">
                                                    <t t-out="plan.summary"/>
                                                </p>
                                                <t t-if="plan.product_template_ids">
                                                    <a class="plan_button" t-att-href="plan.product_template_ids[0].website_url">
                                                    <button type="button" class="btn d-flex text-center mb32 mx-auto text-dark" style="background:#48d760;">Buy Now</button></a>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <p class="text-center">No enterprise plans found.</p>
                        </t>
                    </t>
                </div>
            </section>
        </template>

        <template id="saas_common_website_snippets" inherit_id="website.snippets" name="Saas Common Website Snippets Entry">
            <xpath expr="//div[@id='o_scroll']//div[@id='snippet_structure']" position="before">
                <div id="snippet_saas" class="snippet_structure o_panel">
                    <div class="o_panel_header"><i class="fa fa-th-large"/><span style="margin-left:2px;">Saas Kit Plans Snippets</span></div>
                    <div class="o_panel_body">
                        <t t-snippet="odoo_saas_kit.saas_plans_data" t-thumbnail="/odoo_saas_kit/static/src/img/saas_plans.png"/>
                    </div>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>
